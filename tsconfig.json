{
  "compilerOptions": {
    "module": "es6",
    "target": "es2022",
    "allowJs": true,
    "strict": true,
    "outDir": "./build",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true ,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
